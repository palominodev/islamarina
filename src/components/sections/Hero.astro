---
import { Image } from "astro:assets";
import LogoIslaMarina from "../../assets/images/logo_isla_marina.jpg";

// Puedes definir el enlace al archivo PDF de la carta aquí
const CARTA_PDF_URL = "/carta-isla-marina.pdf"; // Cambia esto a la ruta real
---

<section class="relative flex flex-col items-center justify-center min-h-screen bg-gradient-to-br from-blue-100 via-white to-yellow-50 text-center px-4 py-16 overflow-hidden">

	<div class="relative z-10 flex flex-col items-center flex-grow justify-center">
		<figure class="mb-8 transform hover:scale-105 transition-transform duration-300">
			<Image 
				alt="Logo de Isla Marina" 
				src={LogoIslaMarina} 
				width={250} 
				height={250} 
				class="max-w-[150px] sm:max-w-[200px] lg:max-w-[250px] h-auto shadow-lg rounded-full"
			/>
		</figure>
		<div class="mb-12">
			<h1 class="text-5xl sm:text-6xl lg:text-8xl text-primary font-extrabold tracking-tight mb-4 drop-shadow-md">
				Isla Marina
			</h1>
			<p class="text-2xl sm:text-3xl lg:text-4xl text-accent font-medium">
				Tu cevichería merece brillar en internet
			</p>
		</div>
		
		<!-- CTA Principal -->
		<a 
			href="#menu" 
			class="bg-primary text-white font-bold py-3 px-8 rounded-full text-lg hover:bg-primary-dark transition-all duration-300 shadow-lg transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
		>
			Ver Nuestra Carta
		</a>
	</div>
</section>